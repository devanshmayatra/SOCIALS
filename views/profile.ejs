<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/profile.css" />
    <title>PROFILE</title>
  </head>
  <body>
    <div id="box">
      <% if(user) { %>
        <div id="profileBody">
          <header>
            <div id="uname">user_name</div>
            <div id="options" href="">
              <img src="/images/options.png" alt="" />
            </div>
          </header>
          <section id="u_profile">
            <div id="details1">
              <div id="profile_pic"></div>
              <div id="posts"><span><%= user.noOfPosts %></span>POSTS</div>
              <div id="followers"><span><%=user.noOfFollowers %></span>FOLLOWERS</div>
              <div id="following"><span><%=user.noOfFollowing%></span>FOLLOWING</div>
            </div>
            <div id="details2">
              <div id="name"><%=user.username%></div>
              <div id="profession"><%=user.role%></div>
            </div>
            <div id="details3">
              <div id="bio">
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Iste
                facilis ipsum sit face
              </div>
              <a href="/editprofile/<%= user.username %>" id="edit_profile">Edit Profile</a>
            </div>
          </section>
          <section id="my_posts">
            
            <% for(let i = 0 ; i < user.posts.length ; i++ ) { %>
              <div class="post">
                <div class="postTitle"><%= user.posts[i].postTitle %></div>
                <div class="postTitle"><%= user.posts[i].postDesc %></div>
              </div>
            <% } %>
          </section>
        </div>
      </div>
    <% } else { %>
      <div>U havent Logged in</div>
    <% } %>
    <nav id="bottomNav">
      <div class="icon">
        <a href="home"
          ><img src="/images/home.png" alt="" /> <span>HOME</span></a
        >
      </div>
      <div class="icon">
        <a href="feed"
          ><img src="/images/search.png" alt="" /> <span>FEED</span></a
        >
      </div>
      <div class="icon" id="jjj">
        <a href="post"
          ><img src="/images/add.png" alt="" /><span>POST</span></a
        >
      </div>
      <div class="icon">
        <a href="notification"
          ><img src="/images/mail.png" alt="" /><span>NOTIFICATION</span></a
        >
      </div>
      <div class="icon" id="pro">
        <a href=""
          ><img src="/images/profile.png" alt="" /><span>PROFILE</span></a
        >
      </div>
    </nav>
    <nav id="sideNav">
      <div class="det">
        <div>SETTINGS</div>
        <div>HELP</div>
        <div>ADD ACCOUNT</div>
      </div>
      <div class="det">
        <a href="/">LOGOUT</a>
      </div>
    </nav>
    <div id="exit"></div>
    <script type="module" src="/js/slider.js"></script>
  </body>
</html>
