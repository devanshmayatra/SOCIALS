<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="stylesheet" href="/css/feed.css" />
    <title>FEED</title>
  </head>
  <body>
    <div id="box">
      <header>
        <div id="uname">user_name</div>
        <a id="options" href="/html/notif.html">
          <img src="/images/bell.png" alt="" />
        </a>
      </header>

      <section id="search">
        <div id="searchBox">
          <input type="text" id="search_input" placeholder="Search ...." />
        </div>
      </section>

      <section id="search_box">
        <% if(students.length > 0) { %>
          <% for (let i = 0; i < students.length ; i++) { %>
            <a href= <%= students[i].username %> >
              <div id="account">
                <div id="profilePic"></div>
                <div id="data">
                  <div id="name"><%= students[i].username %></div>
                  <div id="profession"><%= students[i].role %></div>
                </div>
              </div>
            </a>
          <% } %>
        <%} else { %>
          <div id="noUsers">NO STUDENTS DETECTED</div>
        <% } %>
        <% if(mentors.length > 0) { %>
          <% for (let i = 0; i < mentors.length ; i++) { %>
            <a href= <%= students[i].username %> >
              <div id="account">
                <div id="profilePic"></div>
                <div id="data">
                  <div id="name"><%= mentors[i].username %></div>
                  <div id="profession"><%= mentors[i].role %></div>
                </div>
              </div>
            </a>
          <% } %>
        <%} else { %>
          <div id="noUsers">NO MENTORS DETECTED</div>
        <% } %>
          
      </section>

      <section id="feed">
        <% if(students.length > 0) { %>
          <% for (let i = 1; i < students.length ; i++) { %>
            <div class="post" ></div>
          <% } %>
        <% } else {  %>
          <div id="noPosts">NO POSTS DETECTED</div>
        <% } %>
        <% if(mentors.length > 0) { %>
          <% for (let i = 1; i < mentors.length ; i++) { %>
            <div class="post" ></div>
          <% } %>
        <% } else {  %>
          <div id="noPosts">NO POSTS DETECTED</div>
        <% } %>
      </section>
    </div>

    <nav id="bottomNav">
      <div class="icon">
        <a href="home"
          ><img src="/images/home.png" alt="" /> <span>HOME</span></a
        >
      </div>
      <div class="icon" id="fee">
        <a href=""
          ><img src="/images/search.png" alt="" /> <span>FEED</span></a
        >
      </div>
      <div class="icon" id="jjj">
        <a href="post"
          ><img src="/images/add.png" alt="" /><span>POST</span></a
        >
      </div>
      <div class="icon">
        <a href="notification"
          ><img src="/images/mail.png" alt="" /><span>NOTIFICATION</span></a
        >
      </div>
      <div class="icon">
        <a href="profile" + 
          ><img src="/images/profile.png" alt="" /><span>PROFILE</span></a
        >
      </div>
    </nav>

    <div id="nope"></div>

    <script type="module" src="../js/feed.js"></script>
  </body>
</html>
