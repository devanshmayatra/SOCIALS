<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/home.css" />
    <title>HOME PAGE</title>
  </head>
  <body>
    <div id="box">
      <header>
        <div id="uname">user_name</div>
        <a id="options" href="/notification">
          <img src="/images/bell.png" alt="" />
        </a>
      </header>
      <section id="story">
        <% for(let i = 0 ; i < announcements.length && i < 3 ; i++ ){ %>
          <a href="/notification#<%=announcements[i].announcementTitle%>">
            <article id="<%=announcements[i].announcementTitle%>" class="announcements" >
              <div>
                <h2> Title : <%=announcements[i].announcementTitle%></h2>
                <h3> Topic : <%=announcements[i].announcementTopic%></h3>
              </div>
              </article>
          </a>
          <% if(i >= 2){ %>
            <h3>click to go to announcements page</h3>
          <% } %>    
        <% } %>
      </section>
      <section id="content">
        <% for(let i = 0 ; i < posts.length ; i++ ) { %>
            <div class="profilePost">
              <div class="profilePostHeader">
                <div class="postProfilePic"></div>
                <div class="postAuthor"><%= posts[i].author %></div>
              </div>
              <div class="postTitle"><%= posts[i].title %></div>
              <div class="postContent"><%= posts[i].content %></div>
            </div>
        <% } %>
      </section>
    </div>

    <nav id="bottomNav">
      <div class="icon" id="lome">
        <a href=""><img src="/images/home.png" alt="" /> <span>HOME</span></a>
      </div>
      <div class="icon">
        <a href="feed"
          ><img src="/images/search.png" alt="" /> <span>FEED</span></a
        >
      </div>
      <div class="icon" id="jjj">
        <a href="post"
          ><img src="/images/add.png" alt="" /><span>POST</span></a
        >
      </div>
      <div class="icon">
        <a href="notification"
          ><img src="/images/mail.png" alt="" /><span>NOTIFICATION</span></a
        >
      </div>
      <div class="icon">
        <a href="profile"
          ><img src="/images/profile.png" alt="" /><span>PROFILE</span></a
        >
      </div>
    </nav>
  </body>
</html>
